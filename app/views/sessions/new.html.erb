<h1>Log in</h1>
<%= form_for(:session, url: login_path) do |f| %>

    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <dl class="form remember-me">
      <%= f.label :remember_me%>
      <%= f.check_box :remember_me%>
    </dl>


    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-primary" %>
    </div>
<% end %>

