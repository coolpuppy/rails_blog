<p id="notice"><%= notice %></p>


<%= link_to "Followings(#{@user.followings.count})", followings_user_path(user_id: @user.id) %>
<%= link_to "Followers(#{@user.followers.count})", followers_user_path(user_id: @user.id) %>
<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>
<% if @blogs.any? %>
<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Time</th>
    <th colspan="3"></th>
  </tr>
  </thead>
    <tbody>
    <% @blogs.each do |blog| %>
        <tr>
          <td><%= blog.title %></td>
          <td><%= blog.content %></td>
          <td><%= blog.updated_at %></td>
        </tr>
    <% end %>
    </tbody>
</table>
<%= paginate @blogs %>
<% else %>
    <p>This user has not posted any blogs yet!</p>
<% end %>

<%= render 'follow_form' if logged_in? %>